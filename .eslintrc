{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "pureness"
    ],
    "rules": {
        "pureness/forbidden-expressions": [2,
            {
                "masks": "formatter",
                "expressions": ["Date.now", "_.now"]
            },
            {
                "masks": ["helper"],
                "expressions": "adapter.*"
            }
        ],
        "pureness/forbidden-import": [2,
            {
                "masks": "formatter",
                "modules": ["path", "adapt"]
            }
        ],
        "pureness/forbid-new": [1, "formatter"],

        // some general rules for testing purposes
        "eqeqeq": [2, "allow-null"],
        "no-undef": 2
    },
    "globals": {
        "_": true
    }
}

